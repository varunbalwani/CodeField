<% layout('layouts/boilerplate') %>
<div class="row" style="font-family: consolas;">
    <h1 class="text-center" style="color: rgb(255, 255, 255) ;
    -webkit-text-fill-color: rgb(255, 255, 255) ;">Add Material</h1>
    <div class="col-6 offset-3">
        <form action="/material/addMaterial" method="POST" >
            <div class="mb-3">
                <label class="form-label" for="link" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Link</label>
                <input class="form-control" type="text" id="link" name="link" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="topic" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Topic</label>
                <textarea class="form-control" type="text" id="Topic" name="Topic" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>      
            <button class="mb-3 btn btn-success">Add Material</button>
        </form>
        <a class="mb-3 btn btn-dark" href="/materials">Back to Material</a>
		<% suggestion.forEach(function(comment){ %>
			<div class="card mb-3 ">
				<div class="card-body">
					<h4><strong ><%= comment.topic%></strong></h4>
					<h6>Submitted by: <%= comment.author.username%></h6>
                    <h6 class="pull-right text-muted "  >Suggested on <%=comment.time1%></h6>
					<br>
                    <h4 class="card-text">  <%= comment.text %> </h4>
                        <% if(currentUser && (comment.author.id.equals(currentUser._id)||currentUser.role==='moderator')){ %>
                            <form id="delet-form" action="addsuggestions/<%= comment._id %>?_method=DELETE" method="POST" >
                                <button class="btn btn-sm btn-danger ">Delete</button>
                            </form>
                        <% } %>
				</div>
			</div>
		<% }); %>
    </div>
</div> 
    
