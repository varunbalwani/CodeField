<% layout('layouts/boilerplate') %>  

<div class="row" style="font-family: consolas;">
    <h1 class="text-center" style="color: rgb(255, 255, 255) ;
    -webkit-text-fill-color: rgb(255, 255, 255) ;">Edit Suggestion</h1>
    <div class="col-6 offset-3">
        <form action="/discussions/<%= discussion_id %>/comments/<%= comment._id%>?_method=PUT" method="POST" >
            <div class="mb-3">
                <label class="form-label" for="sug" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Suggestion</label>
                <textarea class="form-control" type="text" id="comment" name="comment[text]"  rows="5" cols="90" required><%=comment.text %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>      
            <button class="mb-3 btn btn-success">Submit</button>
        </form>
        <a class="mb-3 btn btn-dark" href="/discussions/<%= discussion_id %>">Back to Discussion</a>
    </div>
</div> 

